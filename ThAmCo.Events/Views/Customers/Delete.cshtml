                <th>
                    Customer Surname
                    @*@Html.DisplayNameFor(model => model.Surname)*@
                </th>
                <th>
                    Customer Email Address
                    @*@Html.DisplayNameFor(model => model.Email)*@
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.FirstName)
