@model ThAmCo.Events.Models.StaffDetailsViewModel
<h2>@ViewData["FullName"] Details</h2>

<div class="row">
    <div class="col-md-12">
        <hr />
        <h4>Event Details</h4>
        <table class="table table-hover">
            <tr>
                <th>
                    Staff Full Name
                </th>
                <th>
                    Staff Email
                </th>
                <th>
                    First Aider
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.FullName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>

                <td>
                    @Html.DisplayFor(model => model.FirstAider)
                </td>
            </tr>
        </table>
    </div>
    <div class="col-md-12">
        @if (Model.Events.Any())
        {
            <hr />
            <h4>Events</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Event Title
                        </th>
                        <th>
                            Event Date
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Events)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p><br />@Model.FirstName @Model.Surname Is Not Booked Onto Any Events</p>
        }
    </div>
    <div class="col-md-4">
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
