@model ThAmCo.Events.Data.GuestBooking
@{ }
<h2>Delete</h2>
<div class="row">
    <div class="col-md-12">
        <h4>Are You Sure You Want To Delete Booking For @Model.Customer?</h4>
        <hr />
        <h4>Delete Customer @Model.Customer.FirstName @Model.Customer.Surname</h4>
        <table class="table">
            <tr>
                <th>
                    Customer Name
                    @*@Html.DisplayNameFor(model => model.Customer)*@
                </th>
                <th>
                    Customer Email Address
                    @*@Html.DisplayNameFor(model => model.Email)*@
                </th>
                <th>
                    Event Title
                    @*@Html.DisplayNameFor(model => model.Title)*@
                </th>
                <th>
                    Guest Atteneded
                    @*@Html.DisplayNameFor(model => model.Attended)*@
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Customer.FirstName)
                    @Html.DisplayFor(model => model.Customer.Surname)
                </td>

                <td>
                    @Html.DisplayFor(model => model.Customer.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Event.Title)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Attended)
                </td>
            </tr>
        </table>
    </div>
    <div class="col-md-12">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="EventId" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>